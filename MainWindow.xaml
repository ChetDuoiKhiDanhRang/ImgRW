<Window x:Class="ImgRW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImgRW"
        mc:Ignorable="d"
        Title="Công cụ hình ảnh" Height="450" Width="800" 
        ResizeMode="CanResizeWithGrip"
        FontFamily="Calibri"
        FontSize="14"
        ShowActivated="False"
        Padding="1"
        >
    <StackPanel Margin="0">
        <Menu x:Name="mainMenu" 
              VerticalAlignment="Top" 
              Padding="1"
              Background="Azure"
              BorderBrush="DarkCyan"
              BorderThickness="0.5"
              FontFamily="Calibri"
              FontSize="14"
              FontWeight="Normal"
              >
            <MenuItem Header="Tập _tin" 
                      Background="Azure"
                      Name="mnFile"
                      IsHitTestVisible="True">
                <MenuItem Header="Thêm tập tin hình ảnh" 
                          Name="mnAddFiles"/>
                <MenuItem Header="Thêm hình ảnh từ thư mục"
                          Name="mnAddFolder"/>
            </MenuItem>
            <MenuItem Header="Tùy chọn"
                      x:Name="mnOption" Visibility="Visible">
                <MenuItem Header="Tự động mở thư mục kết quả"
                          Name="mnAutoOpenOutput"
                          IsCheckable="True"
                          IsChecked="True"/>
                <MenuItem Header="Xử lý song song"
                          Name="mnMultithread"
                          IsCheckable="True"
                          IsChecked="True"/>
            </MenuItem>
        </Menu>
        <Grid Background="WhiteSmoke">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" MinHeight="30"/>
                <RowDefinition Height="1*" MinHeight="30"/>
            </Grid.RowDefinitions>
            <Label HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Content="Danh sách tập tin"
                   Grid.Column="0"
                   Grid.Row="0"
                   FontWeight="DemiBold"/>
            <Button x:Name="btnAddFiles"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Grid.Column="0"
                    Grid.Row="0"
                    Content="+"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Width="24"/>
            <ListView x:Name="lsbFiles" 
                      Grid.Row="1" 
                      Grid.Column="0"
                      Background="Red">
                
            </ListView>
            <ComboBox Name="cmbFonts"
                      Grid.Column="1"
                      Grid.Row="0"
                      BorderBrush="Black"
                      Grid.RowSpan="1"
                      ItemsSource="{x:Static Fonts.SystemFontFamilies}"
                      VerticalContentAlignment="Center"
                      >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Text="{Binding}" 
                            FontFamily="{Binding}"
                            />
                    </DataTemplate>
                    
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>
        <Frame Background="GreenYellow"
               Content="Frame" Height="auto"/>
    </StackPanel>
</Window>
